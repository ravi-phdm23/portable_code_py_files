"""
Configuration constants for the application.
Now uses dynamic settings for paths.
"""
from settings_manager import SettingsManager

# Dynamic path getters
def get_database_url():
    """Get configured database URL."""
    return SettingsManager.get_instance().get_path('database_path')

def get_images_dir():
    """Get configured images directory."""
    return SettingsManager.get_instance().get_path('images_dir')

def get_reports_dir():
    """Get configured reports directory."""
    return SettingsManager.get_instance().get_path('reports_dir')

def get_logs_dir():
    """Get configured logs directory."""
    return SettingsManager.get_instance().get_path('logs_dir')

def get_models_dir():
    """Get configured models directory."""
    return SettingsManager.get_instance().get_path('models_dir')

# Backward compatibility constants (evaluated once at import for code that can't be easily updated)
settings = SettingsManager.get_instance()
DATABASE_URL = settings.get_path('database_path')
IMAGES_DIR = settings.get_path('images_dir')
MODELS_DIR = settings.get_path('models_dir')

# CORS
ALLOWED_ORIGINS = ["http://localhost:3000"]

# Visualization limits
MAX_PAIRPLOT_COLUMNS = 10
MAX_TARGET_DISTRIBUTION_VALUES = 20

# Feature importance
MISSING_THRESHOLD = 0.90
TEST_SIZE = 0.25
RANDOM_STATE = 42
RF_N_ESTIMATORS = 300
RF_MAX_DEPTH = None
LR_C = 1.0
LR_MAX_ITER = 2000
